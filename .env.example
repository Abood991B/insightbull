# Google OAuth2 Configuration
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret_here
VITE_OAUTH_REDIRECT_URI=http://localhost:8080/admin/auth/callback

# Admin Configuration
VITE_ADMIN_EMAILS=admin@example.com,admin2@example.com
VITE_SESSION_TIMEOUT=1800000 # 30 minutes in milliseconds
VITE_SESSION_SECRET=your_session_secret_here_min_32_chars

# TOTP Configuration
VITE_TOTP_ISSUER=Stock Market Sentiment Dashboard
VITE_TOTP_SECRET_KEY=your_totp_secret_key_here_min_32_chars

# Security Configuration
VITE_RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
VITE_RATE_LIMIT_MAX_ATTEMPTS=5
VITE_ENABLE_HTTPS=true
VITE_SECURE_COOKIES=true

# Timezone Configuration (OPTIONAL)
# Leave empty to auto-detect user's browser timezone (recommended)
# Set to override with specific timezone (useful for testing or fixed deployments)
# IANA timezone examples: Asia/Kuala_Lumpur, America/New_York, Europe/London, UTC
# Full list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# VITE_USER_TIMEZONE=

# API Configuration (existing)
VITE_API_BASE_URL=http://localhost:3000
