# ============================================================================
# Insight Stock Dashboard - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite (Development - Default)
DATABASE_URL=sqlite+aiosqlite:///./data/insight_stock.db

# PostgreSQL (Production - Optional)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/insight_stock
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=insight_stock
# DATABASE_USER=your_db_user
# DATABASE_PASSWORD=your_db_password

# ============================================================================
# API Keys (Required for Data Collection)
# ============================================================================
# Get your free API keys from:

# FinHub API - https://finnhub.io/register
# Free tier: 60 requests/minute
FINNHUB_API_KEY=your_finnhub_api_key_here

# NewsAPI - https://newsapi.org/register
# Free tier: 100 requests/day
NEWS_API_KEY=your_newsapi_api_key_here

# Google Gemini AI (optional - for AI verification of sentiment)
# GEMINI_API_KEY=your_gemini_api_key_here

# Note: HackerNews and GDELT do not require API keys (free and unlimited)

# ============================================================================
# Google OAuth2 Configuration (Required for Admin Panel)
# ============================================================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID
# 2. Add authorized redirect URI: http://localhost:8000/admin/auth/callback

GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================================================
# Admin Configuration
# ============================================================================
# Comma-separated list of admin email addresses
# Only these emails can access the admin dashboard after OAuth2 + TOTP verification
ADMIN_EMAILS=admin@example.com,another.admin@example.com

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Insight Stock Dashboard
APP_VERSION=1.0.0

# IMPORTANT: Set to False for production/public deployments
DEBUG=False

# Environment: development, staging, production
ENVIRONMENT=production

# ============================================================================
# Security Settings (REQUIRED - generate unique values!)
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_generate_with_secrets_token_urlsafe_32
JWT_SECRET_KEY=CHANGE_ME_generate_with_secrets_token_urlsafe_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key Encryption (REQUIRED - no auto-generation)
# Generate key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Generate salt: python -c "import secrets; print(secrets.token_hex(16))"
API_KEY_ENCRYPTION_KEY=CHANGE_ME_generate_with_secrets_token_urlsafe_32
API_ENCRYPTION_SALT=CHANGE_ME_generate_with_secrets_token_hex_16

# ============================================================================
# CORS Settings
# ============================================================================
# Allowed origins for frontend access (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ============================================================================
# Redis Configuration (Optional - for production caching)
# ============================================================================
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# End of Configuration
# ============================================================================
# After filling in your values, rename this file to .env
# Example: copy .env.example .env (Windows) or cp .env.example .env (Linux/Mac)
