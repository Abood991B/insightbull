# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Stock Market Sentiment Dashboard API"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/sentiment_dashboard

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External API Keys
# Reddit API - Create app at https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=StockSentimentDashboard/1.0

# FinnHub API - Get key at https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key

# Marketaux API - Get key at https://www.marketaux.com/
MARKETAUX_API_KEY=your_marketaux_api_key

# NewsAPI - Get key at https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key

# Google OAuth2 (for admin authentication)
# Create credentials at https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5173/admin/auth/callback

# Rate Limiting (requests per time period)
RATE_LIMIT_REDDIT=60
RATE_LIMIT_FINNHUB=60
RATE_LIMIT_MARKETAUX=100
RATE_LIMIT_NEWSAPI=100

# Data Pipeline
PIPELINE_SCHEDULE="*/15 * * * *"  # Every 15 minutes
BATCH_SIZE=100
MAX_WORKERS=4

# Sentiment Analysis
FINBERT_MODEL=ProsusAI/finbert
SENTIMENT_CACHE_TTL=900  # 15 minutes
PRICE_CACHE_TTL=300  # 5 minutes

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=30

# Monitoring
ENABLE_METRICS=true

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
