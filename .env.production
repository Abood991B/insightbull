# Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Google OAuth2 Configuration (Required)
# Get these from Google Cloud Console: https://console.cloud.google.com/
VITE_GOOGLE_CLIENT_ID=your_production_google_client_id
VITE_GOOGLE_CLIENT_SECRET=your_production_google_client_secret
VITE_OAUTH_REDIRECT_URI=https://yourdomain.com/admin/auth/callback

# Admin Configuration (Required)
# Add authorized admin email addresses (comma-separated)
VITE_ADMIN_EMAILS=admin@yourdomain.com,admin2@yourdomain.com
VITE_SESSION_TIMEOUT=1800000 # 30 minutes in milliseconds
VITE_SESSION_SECRET=generate_a_secure_random_string_min_32_chars_here

# TOTP Configuration (Required)
VITE_TOTP_ISSUER=Stock Market Sentiment Dashboard
VITE_TOTP_SECRET_KEY=generate_another_secure_random_string_min_32_chars

# Security Configuration (Required)
VITE_RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
VITE_RATE_LIMIT_MAX_ATTEMPTS=5
VITE_ENABLE_HTTPS=true
VITE_SECURE_COOKIES=true

# API Configuration
VITE_API_BASE_URL=https://api.yourdomain.com
